<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- 뒤로가기 버튼 -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_round_light"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_info_title"
                    android:textAlignment="center"
                    android:textColor="@color/gray_900"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:text="더 나은 운동 경험을 위해 정보를 입력해주세요"
                    android:textAlignment="center"
                    android:textColor="@color/gray_400"
                    android:textSize="14sp" />

                <!-- 키 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/height"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_background"
                    android:hint="170"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textSize="16sp" />

                <!-- 몸무게 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_background"
                    android:hint="65"
                    android:inputType="numberDecimal"
                    android:padding="16dp"
                    android:textSize="16sp" />

                <!-- 성별 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_male"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_secondary"
                        android:text="@string/male"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <Button
                        android:id="@+id/btn_female"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_secondary"
                        android:text="@string/female"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <Button
                        android:id="@+id/btn_other"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_secondary"
                        android:text="@string/other"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />
                </LinearLayout>

                <!-- 운동 목적 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/exercise_goal"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_weight_loss"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/button_secondary"
                        android:text="@string/weight_loss"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <Button
                        android:id="@+id/btn_muscle_gain"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/button_secondary"
                        android:text="@string/muscle_gain"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <Button
                        android:id="@+id/btn_fitness"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/button_secondary"
                        android:text="@string/fitness"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <Button
                        android:id="@+id/btn_mass_gain"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/button_secondary"
                        android:text="@string/mass_gain"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />

                    <Button
                        android:id="@+id/btn_balance"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/button_secondary"
                        android:text="@string/balance"
                        android:textColor="@color/gray_700"
                        android:foreground="?android:attr/selectableItemBackground" />
                </LinearLayout>

                <!-- 다음 버튼 -->
                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background"
                    android:text="@string/next"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
